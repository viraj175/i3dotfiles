[colors]
;background = ${xrdb:color0:#222}
background = #CC0f0f0f
background-alt = #CC0f0f0f
;foreground = ${xrdb:color7:#222}
foreground = #fff
foreground-alt = #fff
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/viraj]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 30
;offset-x = 1%
;offset-y = 1%
; radius = 6.0
separator = |
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = JetBrains Mono Nerd Font Propo:pixelsize=10:style=ExtraBold
font-1 = JetBrains Mono Nerd Font Propo:pixelsize=8:style=Bold
font-2 = JetBrains Mono Nerd Font Propo:pixelsize=10:style=Bold

modules-left = powermenu
modules-center = awesome
modules-right = battery wlan date

tray-position = center
tray-padding = 0
;tray-background = #0063ff

wm-restack = awesome

cursor-click = pointer
cursor-scroll = ns-resize
;--------------------------------------------------------------------------------------------------------------------------------------------

[module/awesome]
type = custom/script
interval = 1
format = <label>
label = %output%
label-padding = 1


[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 2

label-open = 
label-open-foreground = #A67B5B
label-close = 
label-close-foreground = #A67B5B
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = 
menu-0-0-exec = systemctl reboot
menu-0-1 = 
menu-0-1-exec = systemctl poweroff
menu-0-2 = 
menu-0-2-exec = pkill -SIGTERM -u $USER

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = systemctl reboot

menu-2-0 = power off
menu-2-0-exec = systemctl poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0


[module/wlan]
type = custom/menu
expand-right = true
format-spacing = 2

label-open = 
label-open-foreground = #A67B5B
label-close = 
label-close-foreground = #A67B5B
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = Connect
menu-0-0-exec = nm-applet
menu-0-1 = Exit
menu-0-1-exec = pkill nm-applet

[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
label = BL

bar-width = 10
bar-indicator = |
bar-indicator-foreground = #fff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/date]
type = internal/date
interval = 1

date = %a, %b %d
time = %l:%M:%S %p
label = %date% %time%

format-prefix-foreground = ${colors.foreground-alt}


[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-underline = #ffb52a

format-discharging = <animation-discharging> <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

format-full-prefix = " "
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 750

animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-foreground = ${colors.foreground-alt}
animation-discharging-framerate = 750


[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 0
margin-bottom = 0

; vim:ft=dosini
; labels = 
;
